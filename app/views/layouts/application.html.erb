<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>






  <body class="d-flex flex-column vh-100">

    <header "shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-4px,12px" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto"

            <% if user_signed_in? %>
              <li class="nav-item">
              <%= link_to root_path, class: 'nav-link text-light' do %>
                <i class="fas fa-home"></i> Home
              <% end %>
              </li>
              <li class="nav-item">
              <%= link_to user_registration_path, class: 'nav-link text-light' do %>
                <i class="fas fa-users"></i> Users
              <% end %>
              </li>
              <li class="nav-item">
              <%= link_to books_path, class: 'nav-link text-light' do %>
                <i class="fas fa-book-open"></i> Books
              <% end %>
              </li>
              <li class="nav-item">
              <%= link_to destroy_user_session_path, class: 'nav-link text-light', method: :delete do %>
                <i class="fas fa-sign-out-alt"></i> Log out
              <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link text-light' do %>
                  <i class="fas fa-home"></i> Home
                <% end %>
              </li>
              </li>
              <li class="nav-item">
              <%= link_to home_about_path, class: 'nav-link text-light' do %>
                <i class="fas fa-link"></i> About
              <% end %>
              </li>
              </li>
              <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                <i class="fas fa-user-plus"></i> Sign Up
              <% end %>
              </li>
              </li>
              <li class="nav-item">
              <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                <i class="fas fa-sign-in-alt"></i> Log in
              <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>


    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
    	    	<p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>


  </body>
</html>

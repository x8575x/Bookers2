
<p id="notice"><%= flash[:notice] %></p>
  <div class="container">
    <div class="row">
      <%= render 'user_info.html.erb', current_user: @book.user %>

      <div class="col-md-8 offset-md-1">
  		  <h2>Book detail</h2>
  		  <table class="table">
  		    <tbody>
  		      <tr>
  		        <td>
  		          <%= link_to user_path(@book.user) do %>
  		            <%= image_tag @book.user.get_profile_image(100, 100) %><br><%= @book.user.name %>
		            <% end %>
  		        </td>
  		        <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>

  		        <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_2464" %></td>
                <td><%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger destroy_book_2464", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
